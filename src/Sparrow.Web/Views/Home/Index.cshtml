<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <title>Offer Management - Codename "Sparrow"</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app="sparrow">
    
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Offer Management</a>
            </div>
            <div class="collapse navbar-collapse" data-ng-controller="MenuCtrl">
                <ul class="nav navbar-nav">
                    <li ng-class="{active : activeViewPath==='/overview'}"><a href="/overview">Overview</a></li>
                    <li class="dropdown" ng-class="{active : isActivePath('/offers') || isActivePath('/drafts')}">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Offers <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/offers">Active Offers</a></li>
                            <li><a href="/offers/archive">Archived Offers</a></li>
                            <li><a href="/drafts">Drafts</a></li>
                        </ul>
                    </li>
                    <li ng-class="{active : isActivePath('/products')}"><a href='/products'>Products</a></li>
                    <li ng-class="{active : isActivePath('/customers')}"><a href="/customers">Customers</a></li>
                    <li ng-class="{active : isActivePath('/users')}"><a href="/users">Users</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-class="{active : activeViewPath==='/admin'}"><a href="/admin">Administration</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    
    <div notifications="bottom right" data-ng-controller="NotificationCtrl"></div>

    <div class="container" data-ng-view></div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
</body>
</html>
